<% if @check == "Post" %>
  <%= turbo_stream.update "post-likes" do %>
    <%= button_to "", post_likes_path, 
                    class: "post-actions-like" %>
  <% end %>

  <%= turbo_stream.update "post-likes-count" do %>
    <%= pluralize(@post_likes.count, "like") %>
  <% end %>
<% else %>
  <%= turbo_stream.update "comment-likes" do %>
    <%= button_to "", post_comment_like_path, 
                    class: "post-actions-like" %>
  <% end %>
  <%= turbo_stream.update "comment-likes-count" do %>
    <%= pluralize(@comment_likes.count, "like") %>
  <% end %>
<% end %>



 


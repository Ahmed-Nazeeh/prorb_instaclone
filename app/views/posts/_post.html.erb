<div class="post">
  <div class="post-author">
    <div class="avatar avatar-<%= rand(1..27) %>"></div>
    <div><%= post.user.username %></div>
  </div>
  <div class="post-body">
    <span><%= post.body %></span>
  </div>
  <div class="post-actions">
    <%  find_like(post, current_user) %>
    <% if @found_like.present? %>
      <div id="post-likes">
        <%= button_to "", post_likes_path(post), 
                      class: "post-actions-unlike", method: :delete %>
      </div>
    <% else %>
      <div id="post-likes" >
        <%= button_to "", post_likes_path(post), 
                      class: "post-actions-like" %>
      </div>
    <% end %>
    <div class="post-actions-comments" id="post-likes-count"><%= pluralize(post.likes.count, "likes") %></div>
    <div class="post-actions-comments" id="post-comments-count"><%= pluralize(post.comments.count, "comment") %></div>
  </div>
  <div class="post-comments">
    <div id="comment-form"><%= render partial: "comments/form", locals: { post: post } %></div>
    <div id="post-comments-list">
      <%= render partial: "comments/list", locals: { post: post } %>
    </div>
  </div>
</div>

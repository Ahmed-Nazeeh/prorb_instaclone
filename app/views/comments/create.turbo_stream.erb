<%= turbo_stream.update "comment-form_#{@post.id}" do %>
  <%= render partial: "comments/form", locals: { post: @post } %>
<% end %>

<%= turbo_stream.update "post-comments-list_#{@post.id}" do %>
  <%= render partial: "comments/list", locals: { post: @post } %>
<% end %>

<%= turbo_stream.update "post-comments-count_#{@post.id}" do %>
  <%= pluralize(@post.comments.count, "comment") %>
<% end %>
